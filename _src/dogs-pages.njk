---
pagination:
  data: dogs
  size: 1
  alias: dog
  addAllPagesToCollections: true
permalink: "dogs/{{dog.permalink if dog.permalink else dog.name | slug }}/"
layout: base
tags: dogs
eleventyComputed:
  title: "{{ dog.name }}"
  image: "./_src/images/{{ dog.permalink if dog.permalink else dog.name | slug }}.jpg"
  socialImg: "/images/{{ dog.permalink if dog.permalink else dog.name | slug }}.jpg"
  bio: "{{ dog.bio }}"
  owner: "{{ dog.owner }}"
  ownerUrl: "{{ dog.ownerUrl }}"
---

<h2 class="dod-heading-1 dod-stack-16">{{ dog.name }}</h2>

<div class="dod-flex-row-responsive">
  <div class="dod-flex-item dod-stack-16 dod-image-autoheight">
    {% image image, dog.name, "(min-width: 43.75em) 50vw, 100vw" %}
  </div>
  <article class="dod-flex-item dod-article">
    {% if dog.bio %}
    <p class="dod-stack-16">{{ dog.bio }}</p>
    {% endif %}

    <h3 class="dod-heading-3">Owner</h3>

    <p><a href="{{ dog.ownerUrl }}">{{ dog.owner }}</a></p>

    {% if dog.ownerTitle %}
    <p>{{ dog.ownerTitle }}</p>
    {% endif %}
  </article>
</div>
